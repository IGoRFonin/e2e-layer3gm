root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{jsx,js,ejs}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.{css,less}]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.ejs]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4
